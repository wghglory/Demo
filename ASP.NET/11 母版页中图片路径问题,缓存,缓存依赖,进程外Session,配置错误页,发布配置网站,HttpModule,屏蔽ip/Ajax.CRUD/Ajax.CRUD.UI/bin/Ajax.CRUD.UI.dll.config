<configuration>
  <connectionStrings>
    <add name="connStr" connectionString="Data Source=steve-pc;Initial Catalog=apsxDb;Integrated Security=True"/>
  </connectionStrings>
  <system.web>
    <compilation debug="false" targetFramework="4.0" />

    <!--配置缓存依赖，依赖数据库 -->
    <caching>
      <sqlCacheDependency enabled="true">
        <databases>
          <add name="apsxDbEntityName" connectionStringName="connStr" pollTime="500"/>
        </databases>
      </sqlCacheDependency>
    </caching>
    <!--配置Session -->
    <!--
    <sessionState cookieless="false" cookieName="MyASP_NetSessionId">

    </sessionState>-->

    <!--配置Session存储到一个单独的服务器中 -->
    <!--<sessionState mode="StateServer" stateConnectionString="tcpip=localhost:42424">
    </sessionState>-->

    <sessionState mode="SQLServer" allowCustomSqlDatabase="true" sqlConnectionString="Data Source=steve-pc;Initial Catalog=SessionTestDb;User ID=sa;Password=1234"></sessionState>

    <customErrors mode="RemoteOnly" defaultRedirect="~/PageError.htm">
      <error statusCode="403" redirect="NoAccess.htm" />
      <error statusCode="404" redirect="FileNotFound.htm" />
    </customErrors>

  </system.web>

</configuration>
